{
    "name": "xpaw/template",
    "description": "HTML-based template syntax inspired by Vue.",
    "type": "library",
    "license": "MIT",
	"scripts": {
		"test": "phpunit --color",
		"coverage": [
			"@putenv XDEBUG_MODE=coverage",
			"phpunit --color --coverage-html coverage"
		],
		"phpstan": "phpstan"
	},
    "autoload": {
        "psr-4": {
            "xPaw\\Template\\": "src/"
        }
    },
    "authors": [
        {
            "name": "Pavel Djundik"
        }
    ],
	"require": {
		"php": ">=8.4",
		"ext-dom": "*",
		"ext-libxml" : "*"
	},
    "require-dev": {
        "phpstan/phpstan": "^2.1",
        "phpunit/phpunit": "^12.0",
        "phpstan/phpstan-phpunit": "^2.0"
    }
}
